<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@android:color/white"
              android:gravity="center"
              android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/btnContact1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/ivContact1"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_call"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnContact2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/ivContact2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sms"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnContact3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/ivContact3"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_email"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnContact4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/ivContact4"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_elipse"/>

    </FrameLayout>

</LinearLayout>