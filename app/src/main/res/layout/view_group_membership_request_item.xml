<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/request_item_row_height"
              android:orientation="vertical"
              android:paddingBottom="6dp"
              android:paddingEnd="16dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingStart="16dp"
              android:paddingTop="10dp">

    <TextView
        android:id="@+id/tvRequestMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_dark_text_color"
        android:textSize="14sp"
        android:lines="2"
        android:ellipsize="end"
        tools:text="Michael Hahn requested access to Mobile group."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@color/app_tint_color"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/approve_button_title"/>

        <Button
            android:id="@+id/btnDeny"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="#ff999999"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/deny_button_title"/>

    </LinearLayout>


</LinearLayout>