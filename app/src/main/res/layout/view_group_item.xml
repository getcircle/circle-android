<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"
              android:paddingBottom="10dp"
              android:paddingEnd="16dp"
              android:paddingRight="16dp"
              android:paddingLeft="16dp"
              android:paddingStart="16dp"
              android:paddingTop="10dp">

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/app_dark_text_color"
        android:textSize="15sp"
        tools:text="Group Name"/>

    <TextView
        android:id="@+id/tvGroupMembersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/app_dark_text_color_secondary_info"
        android:textSize="13sp"
        tools:text="200 Members"/>

    <TextView
        android:id="@+id/tvGroupDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/app_dark_text_color_secondary_info"
        android:textSize="13sp"
        tools:text="Some description about the group."/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnRequestToJoin"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/app_tint_color"
            android:textSize="14sp"
            tools:text="Request to join"/>

        <include
            android:layout_marginTop="2dp"
            android:visibility="gone"
            layout="@layout/view_progress_small"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>